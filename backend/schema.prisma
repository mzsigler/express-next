datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  password String
  posts    Post[] @relation("Post_author")
}

model Post {
  id          String    @id @default(cuid())
  title       String    @default("")
  status      String?   @default("draft")
  content     String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  publishDate DateTime?
  author      User?     @relation("Post_author", fields: [authorId], references: [id])
  authorId    String?   @map("author")
  tags        Tag[]     @relation("Post_tags")

  @@index([authorId])
}

model Tag {
  id    String @id @default(cuid())
  name  String @default("")
  posts Post[] @relation("Post_tags")
}

model Car {
  id        String    @id @default(cuid())
  dateAdded String?
  year      Int?
  make      String    @default("")
  model     String    @default("")
  inv       String    @default("")
  vin       String    @default("")
  income    Income[]  @relation("Income_car")
  expense   Expense[] @relation("Expense_car")
}

model Income {
  id        String  @id @default(cuid())
  amount    Float?
  customer  String  @default("")
  notes     String  @default("")
  closeDate String?
  mileage   Int?
  car       Car?    @relation("Income_car", fields: [carId], references: [id])
  carId     String? @map("car")

  @@index([carId])
}

model Expense {
  id            String  @id @default(cuid())
  amount        Float?
  vendor        String  @default("")
  description   String  @default("")
  date          String?
  mileage       Int?
  receiptNumber String  @default("")
  car           Car?    @relation("Expense_car", fields: [carId], references: [id])
  carId         String? @map("car")

  @@index([carId])
}

model Balance {
  id                  String    @id @default(cuid())
  name                String    @default("")
  balanceAmount       Float?
  returnDate          String?
  driverLicenseState  String    @default("")
  driverLicenseNumber String    @default("")
  SSN                 String    @default("")
  phone               String    @default("")
  employer            String    @default("")
  employerPhone       String    @default("")
  dateOfBirth         String    @default("")
  notes               String    @default("")
  localContactName    String    @default("")
  localContactPhone   String    @default("")
  payment             Payment[] @relation("Payment_balance")
}

model Payment {
  id            String   @id @default(cuid())
  paymentAmount Float?
  date          String?
  balance       Balance? @relation("Payment_balance", fields: [balanceId], references: [id])
  balanceId     String?  @map("balance")

  @@index([balanceId])
}